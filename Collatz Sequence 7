#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int a,count=0;
    printf("Enter a number\n");
    scanf("%d",&a);
    printf("%d\n",a);
    while(a!=1)
    {
    if(a%2==0)
        a=a/2;
        else
        {
        a=3*a+1;
        }
        printf("%d\n",a);
        count++;
    }
    printf("count:%d",count);
    return 0;
}
