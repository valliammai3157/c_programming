#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
     int numbers[5];
    int sum = 0;
    float average;
    int i;

    for (i = 0; i < 5; i++) {
        scanf("%d", &numbers[i]);
        sum += numbers[i];
    }

    average = (float)sum / 5;

    printf("Sum of the 5 number is : %d\n", sum);
    printf("Average of the 5 number is : %.1f\n", average);
    return 0;
}

