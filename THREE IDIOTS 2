#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int x1,y1,x2,y2;
    float mid_x,mid_y;
    scanf("%d",&x1);
    scanf("%d",&y1);
    scanf("%d",&x2);
    scanf("%d",&y2);
    mid_x=(x1+x2)/2.0;
    mid_y=(y1+y2)/2.0;
    printf("Binoy's house is located at (%.1f,%.1f)\n",mid_x,mid_y);
    return 0;
}
