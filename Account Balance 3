#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    float balance;
    int process;
    float amount;
    scanf("%f",&balance);
    scanf("%d",&process);
    switch(process){
        case 1:
            scanf("%f",&amount);
            balance+=amount;
            printf("%.f\n",balance);
            break;
        case 2:
            scanf("%f",&amount);
            if(amount>balance){
                printf("Insufficient Balance\n");
            }else{
                balance-=amount;
                printf("%.f\n",balance);
            }
            break;
        default:
            printf("Invalid Input\n");
            break;
    }
    return 0;
}
